# ===========================================
# SMS AUTO-BOT SYSTEM - PRODUCTION ENVIRONMENT
# ===========================================
# สำหรับ Easypanel deployment
# คัดลอกไฟล์นี้เป็น .env และแก้ไขค่าต่างๆ ให้เหมาะสมกับ production

# ===========================================
# APPLICATION ENVIRONMENT
# ===========================================
NODE_ENV=production
ENVIRONMENT=production
VITE_MODE=production

# ===========================================
# SUPABASE CONFIGURATION (ใส่ค่าจริงจาก Supabase Dashboard)
# ===========================================
VITE_SUPABASE_URL=https://mnhdueclyzwtfkmwttkc.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_CLIENT_API_KEY=your_supabase_client_api_key_here
VITE_SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# ===========================================
# SMS-UP PLUS CONFIGURATION (ใส่ข้อมูลจริง)
# ===========================================
VITE_SMS_ADMIN_USERNAME=Landingpage
VITE_SMS_ADMIN_PASSWORD=@Atoz123
SMS_UP_PLUS_URL=https://web.smsup-plus.com
SMS_UP_PLUS_IP=58.8.213.44

# ===========================================
# OTP SERVICE CONFIGURATION
# ===========================================
VITE_ANTS_OTP_BASE_URL=https://web.smsup-plus.com
VITE_ANTS_OTP_LOGIN_USERNAME=Landingpage  
VITE_ANTS_OTP_LOGIN_PASSWORD=@Atoz123
VITE_OTP_EXPIRES_IN_MINUTES=5
VITE_OTP_MAX_ATTEMPTS=3
VITE_OTP_RESEND_COOLDOWN_SECONDS=60

# ===========================================
# SECURITY CONFIGURATION (สำคัญ - ต้องสร้างใหม่)
# ===========================================
# สร้างด้วย: openssl rand -hex 32
ENCRYPTION_KEY=generate_32_character_encryption_key_here
JWT_SECRET=generate_jwt_secret_key_here
ENCRYPTION_MASTER_KEY=generate_base64_master_key_here

# ===========================================
# API SERVER CONFIGURATION
# ===========================================
SERVER_PORT=3001
CLIENT_URL=https://yourdomain.com
API_BASE_URL=https://yourdomain.com/api

# ===========================================
# CORS & SECURITY
# ===========================================
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
RATE_LIMITING_ENABLED=true
RATE_LIMITING_WINDOW_MS=60000
RATE_LIMITING_MAX_REQUESTS=100

# ===========================================
# LOGGING & MONITORING
# ===========================================
LOG_LEVEL=info
ENABLE_AUDIT_LOGGING=true
LOG_RETENTION_DAYS=30
ENABLE_DEBUG=false

# ===========================================
# PRODUCTION SETTINGS
# ===========================================
VITE_BOT_MODE=production
ENABLE_SSL_VERIFICATION=true
ENABLE_ADVANCED_SECURITY=true
DATABASE_CONNECTION_TIMEOUT=30000
DATABASE_MAX_CONNECTIONS=20

# ===========================================
# BACKUP & DISASTER RECOVERY
# ===========================================
BACKUP_ENCRYPTION_KEY=generate_backup_encryption_key_here
AUTO_BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=90

# ===========================================
# PERFORMANCE OPTIMIZATION
# ===========================================
ENABLE_CACHING=true
CACHE_TTL_SECONDS=300
DATABASE_QUERY_TIMEOUT=10000